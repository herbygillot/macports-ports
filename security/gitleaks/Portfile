                    sha256  94b87cfbfe91bdad48f554acfb8ce3f50f994e729c17e8087140c004ff8c22f1 \
                    size    94200

# allow Go to fetch dependencies at build time
build.env-delete    GO111MODULE=off GOPROXY=off

build.cmd           make
build.pre_args-append \
                    VERSION=${version}
build.args          build

